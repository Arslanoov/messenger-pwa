@import "~normalize-styl"

body,
html
  margin 0
  padding 0

  overflow-x hidden

html
  scroll-behavior smooth

body
  box-sizing border-box

*,
*::after,
*::before
  box-sizing inherit

button,
input,
textarea,
optgroup,
select,
p
  line-height 1

a
  text-decoration none

  color inherit

h1
h2
h3
h4
h5
h6
  margin 0
  padding 0
